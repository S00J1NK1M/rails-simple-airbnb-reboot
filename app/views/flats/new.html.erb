<div class="container my-3">
  <h1>Add a new flat</h1>
  <div class="container p-4 border mt-4">
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', flats_path,  class: "btn btn-outline-danger" %>
    <% end %>
  </div>


</div>
